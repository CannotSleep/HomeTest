<?xml version="1.0" encoding="utf-8"?>
<com.feicui.administrator.hometest.view.SlidingMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_id"
    android:scrollbars="none"
    xmlns:jj="http://schemas.android.com/apk/res/com.feicui.administrator.hometest"
    jj:rightPadding="200dp"
    tools:context="com.feicui.administrator.hometest.MainActivity"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <include layout="@layout/layout_menu" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorBack"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:onClick="toggleMenu"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/left"
                    android:layout_width="25dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="25dp"
                    />
                <ImageView
                    android:src="@drawable/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:onClick="design"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/right"
                    android:layout_width="33dp"
                    android:layout_height="33dp"/>
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>
</com.feicui.administrator.hometest.view.SlidingMenu>












